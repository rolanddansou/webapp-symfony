###> TEST ENVIRONMENT ###
APP_ENV=test
APP_NAME="Symfony Backend Template - TEST"
APP_SECRET=test_secret_change_me
DEBUG=1

###> symfony/routing ###
DEFAULT_URI=http://localhost:8000
###< symfony/routing ###

###> doctrine/doctrine-bundle ###
DATABASE_URL="mysql://root:root@127.0.0.1:3306/symfony_app_test?serverVersion=8.0&charset=utf8mb4"
###< doctrine/doctrine-bundle ###

###> symfony/messenger ###
MESSENGER_TRANSPORT_DSN=doctrine://default?auto_setup=0
###< symfony/messenger ###

###> symfony/mailer ###
# Mailhog pour les tests
MAILER_DSN=smtp://localhost:1025
MAILER_DSN_ERRORS=smtp://localhost:1025
###< symfony/mailer ###

###> lexik/jwt-authentication-bundle ###
JWT_SECRET_KEY=%kernel.project_dir%/config/jwt/private.pem
JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem
JWT_PASSPHRASE=test_passphrase_not_secure
JWT_TTL=2592000
###< lexik/jwt-authentication-bundle ###

###> NOTIFICATIONS ###
NOTIFICATIONS_MAILER_SENDER_EMAIL=test@localhost
NOTIFICATIONS_MAILER_SENDER_NAME="Symfony Backend TEST"
NOTIFICATIONS_MAILER_DSN=${MAILER_DSN}
###< NOTIFICATIONS ###

###> MONITORING & ALERTS ###
SUPER_ADMIN_ALERT_EMAIL=test@localhost
ADMIN_ALERT_EMAIL=admin@localhost
ENABLE_ERROR_EMAIL_ALERTS=false
ERROR_EMAIL_ALERT_LEVEL=error
###< MONITORING & ALERTS ###

###> FILE STORAGE ###
UPLOAD_DIRECTORY=%kernel.project_dir%/public/uploads
UPLOAD_PUBLIC_URL=/uploads
UPLOAD_MAX_FILE_SIZE=10485760
###< FILE STORAGE ###

###> SECURITY ###
REQUIRE_EMAIL_VERIFICATION=false
PASSWORD_RESET_TOKEN_TTL=3600
MAX_LOGIN_ATTEMPTS=10
LOGIN_THROTTLE_DURATION=300
###< SECURITY ###

###> RATE LIMITING ###
API_RATE_LIMIT="1000 per hour"
REGISTRATION_RATE_LIMIT="50 per hour"
###< RATE LIMITING ###

